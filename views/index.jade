  header.navbar-default(role='banner')
    .container
      nav(role='navigation')
        .container-fluid
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/Welcome') Home
          // Collect the nav links, forms, and other content for toggling
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='mailto:dinte.maria@gmail.com') Contact
          // /.navbar-collapse
        // /.container-fluid
  .container-fluid
    .row-fluid
      .span3.menu-left
        table(width='100%')
          tr
            th(align='center')
              .bs-example(align='center')
                img.img-circle(src='/images/girl1.jpg', name='tool', alt='Circular Image')
          tr
            th
              form(name='form1', align='center')
                select(name='item', onchange='l_image()')
                  option(selected='') girl 1
                  option girl 2
                  option girl 3
                  option girl 4
                  option girl 5
                  option boy 1
                  option boy 2
                  option boy 3
                  option boy 4
                  option boy 5
        #footer
          img(src='/images/later.png')
      .span9.menu-right
        form.form(action='/tweets', method='post')
          h2  New Tweet
          textarea.form-control(align='center',type='text', rows='5', maxlength='140', name='tweetText', placeholder='Enter your text...')
          .pad(align='center')
            button.btn.btn-default(align='center', type='submit') Tweet
          table.table.table-striped
            tr
              th(width='100%') Message
            tr
              td(width='100%')
                - each t in tweets
                  li= t
            tr
              td(width='100%') Hi! This is my first tweet! ;)


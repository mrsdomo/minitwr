doctype html
html
  head(lang='en')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css')
    meta(charset='UTF-8')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href='/images/favicon.ico', rel='icon', type='image/x-icon')
    script(language='JavaScript').
      pictures = new Array()
      for (i = 0; i < 10; i++)
        {
          pictures[i] = new Image()
          if (i == 0) pictures[i].src = "/images/girl1.jpg"
          if (i == 1) pictures[i].src = "/images/girl2.jpg"
          if (i == 2) pictures[i].src = "/images/girl3.jpg"
          if (i == 3) pictures[i].src = "/images/girl4.jpg"
          if (i == 4) pictures[i].src = "/images/girl5.jpg"
          if (i == 5) pictures[i].src = "/images/boy1.jpg"
          if (i == 6) pictures[i].src = "/images/boy2.jpg"
          if (i == 7) pictures[i].src = "/images/boy3.jpg"
          if (i == 8) pictures[i].src = "/images/boy4.jpg"
          if (i == 9) pictures[i].src = "/images/boy5.jpg"
        }
      function l_image()
        {
          document.images[0].src = pictures[document.form1.item.selectedIndex].src
        }
    title Twitter
